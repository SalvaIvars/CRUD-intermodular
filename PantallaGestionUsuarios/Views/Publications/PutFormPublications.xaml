<Window x:Class="PantallaGestionUsuarios.Views.PutFormPublications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PantallaGestionUsuarios.Views"
       xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:Controls="clr-namespace:PantallaGestionUsuarios.Controls"
        mc:Ignorable="d"
                WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual"
        Title="PutFormPublications" Height="720" Width="1080"
        Loaded="FillData">

    <Border Background="#eff2f7" CornerRadius="30" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Menu -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Menu Icon -->
                <Button Margin="20,28,0,35" Width="15" Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"/>
                </Button>

                <Controls:PersonalMenu Grid.Row="1"></Controls:PersonalMenu>
            </Grid>

            <!-- Main Section -->
            <Grid Grid.Column="1" Margin="30 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- Page Title -->
                <TextBlock Text="Update Publication" Grid.Row="2" FontSize="32" FontWeight="SemiBold" Margin="0 20 0 0" HorizontalAlignment="Left" Foreground="#121518"/>

                <!-- Add Button -->
                <StackPanel Orientation="Horizontal" Height="71">

                </StackPanel>


                <!-- Separator -->
                <Separator Height="1" Grid.Row="3" Background="#E5D9B6" Margin="0 0 0 10"/>

                <Grid Grid.Row="5">
                    <Grid>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>

                                <ColumnDefinition Width="200" MaxWidth="200"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Nombre" Style="{StaticResource textPost}"/>
                            <TextBlock Grid.Row="1" Text="Categoria" Style="{StaticResource textPost}"/>
                            <TextBlock Grid.Row="2" Text="Distancia" Style="{StaticResource textPost}"/>
                            <TextBlock Grid.Row="3" Text="Dificultad" Style="{StaticResource textPost}"/>
                            <TextBlock Grid.Row="4" Text="Duración" Style="{StaticResource textPost}"/>
                            <TextBlock Grid.Row="5" Text="Descripción" Style="{StaticResource textPost}"/>
                            <TextBlock Grid.Row="6" Text="Privacidad" Style="{StaticResource textPost}"/>


                            <Controls:PersonalTextBox x:Name="nombreBox" Grid.Column="1" Grid.Row="0" Hint="Nombre... " TextBox.TextChanged="nombreBoxTextChange"/>
                            <Controls:PersonalTextBox x:Name="categoriaBox"  Grid.Column="1" Grid.Row="1" Hint="Categorías..."/>
                            <Controls:PersonalTextBox x:Name="distancaiBox" Grid.Column="1" Grid.Row="2" Hint="Distancia..." TextBox.TextChanged="distanciaBoxTextChange"/>
                            <Controls:PersonalTextBox x:Name="dificultadBox"  Grid.Column="1" Grid.Row="3" Hint="Dificultad..."/>
                            <Controls:PersonalTextBox x:Name="duracionBox"  Grid.Column="1" Grid.Row="4" Hint="Duración..." TextBox.TextChanged="duracionBoxTextChange"/>
                            <Controls:PersonalTextBox x:Name="descripcionBox"  Grid.Column="1" Grid.Row="5" Hint="Descripción..." TextBox.TextChanged="descripcionBoxTextChange"/>
                            <Controls:PersonalTextBox x:Name="privacidadBox"  Grid.Column="1" Grid.Row="6" Hint="Privacidad..."/>



                            <Button Click="SendPublication" Content="Save" Margin="345,29,-345,37" Style="{StaticResource buttonMainGreen}" Grid.Column="1" Grid.Row="4" Width="200" MaxWidth="200" Grid.RowSpan="2"/>

                        </Grid>
                        <Image x:Name="routePicture" HorizontalAlignment="Left" Height="182" Margin="512,32,0,0" VerticalAlignment="Top" Width="180"/>
                        <Button x:Name="leftButton" HorizontalAlignment="Left" Margin="404,65,0,0" VerticalAlignment="Top" Click="buttonLeftClick" Height="125" Width="108" BorderThickness="0" Background="Transparent">
                            <Image x:Name="leftImage">

                            </Image>
                        </Button>
                        <Button x:Name="rightButton" HorizontalAlignment="Left" Margin="693,65,0,0" VerticalAlignment="Top" Click="buttonRightClick"  Height="125" Width="108" BorderThickness="0" Background="Transparent">
                            <Image x:Name="rightImage">
                            </Image>
                        </Button>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
    </Border>
</Window>